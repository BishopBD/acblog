@inject IBlogService Service

<Loader OnLoad="@OnLoad" UseSpin="true">
    <span class="itemdisplay">
        <span class="mdi mdi-folder">
            <a href="categories/@Id" style="color: inherit;">@Category.Name</a>
        </span>
    </span>
</Loader>

@code {
    [Parameter]
    public string Id { get; set; }

    private Category Category { get; set; }

    private async Task OnLoad()
    {
        Category = null;

        Category = await Service.CategoryService.Get(Id);
    }
}
